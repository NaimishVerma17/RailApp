<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.test.naimish.railapp">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/sign"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/sign"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Activities.EnquiryActivity"/>
        <activity android:name=".Activities.RegisterActivity"/>
        <activity android:name=".Activities.PnrEnquiryActivity"/>
        <activity android:name=".Activities.LoginActivity"/>
        <activity android:name=".Activities.LandingActivity"/>
        <activity android:name=".Activities.LiveTrainStatusActivity"/>
        <activity android:name=".Activities.LiveTrainSearchActivity"/>
        <activity android:name=".Activities.SettingsActivity"/>
        <activity android:name=".Activities.ForgotPasswordActivity"/>
        <activity android:name=".Activities.SeatAvalibilityEnquiryActivity"/>
        <activity android:name=".Activities.SeatAvalibilityStatusActivity"/>
        <activity android:name=".Activities.BugReportActivity"/>
        <activity android:name=".Activities.PnrHistory"/>

    </application>

</manifest>