<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rail">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="90dp"

        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.test.naimish.railapp.Views.LightTextView
                android:id="@+id/train_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorfbblue"
                android:gravity="center"
                android:padding="10dp"
                android:paddingRight="5dp"
                android:text="Name"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <com.test.naimish.railapp.Views.LightTextView
                    android:id="@+id/starting_point_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/color_forest"
                    android:padding="10dp"
                    android:text="From"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:rotation="270"
                    app:srcCompat="@android:drawable/arrow_down_float" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@color/colorLightGrey" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:rotation="270"
                    app:srcCompat="@android:drawable/arrow_down_float" />

                <com.test.naimish.railapp.Views.LightTextView
                    android:id="@+id/end_point_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/color_forest"
                    android:padding="10dp"
                    android:text="To"
                    android:textColor="@color/white"
                    android:textSize="18dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorfbblue"
                android:padding="5dp">

                <com.test.naimish.railapp.Views.LightTextView
                    android:id="@+id/starting_point_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="40dp"
                    android:text="From Name"
                    android:textColor="@color/white"
                    android:textAlignment="textStart"
                    android:textSize="15dp" />

                <com.test.naimish.railapp.Views.LightTextView
                    android:id="@+id/end_point_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="60dp"
                    android:paddingRight="5dp"
                    android:text="To Name"
                    android:textColor="@color/white"
                    android:textAlignment="textEnd"
                    android:textSize="15dp" />


            </LinearLayout>
            <com.test.naimish.railapp.Views.LightTextView
                android:id="@+id/train_journey_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_forest"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:layout_marginBottom="2dp"
                android:text="Journey Class"
                android:textColor="@color/white"
                android:textSize="20dp" />
            <com.test.naimish.railapp.Views.LightTextView
                android:id="@+id/train_quota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_forest"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="Quota"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_list_seat_avalibility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

            </android.support.v7.widget.RecyclerView>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>