<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
       <com.test.naimish.railapp.Views.LightTextView
           android:id="@+id/passenger_no"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/passenger_no"
           android:layout_marginRight="30dp"
           android:padding="10dp"
           android:textSize="15dp"/>
        <com.test.naimish.railapp.Views.LightTextView
            android:id="@+id/passenger_booking_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/booking_status"
           android:layout_marginLeft="30dp"
            android:padding="7dp"

            android:textSize="15dp"/>
       <com.test.naimish.railapp.Views.LightTextView
           android:id="@+id/passenger_current_status"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/current_status"
           android:layout_marginLeft="30dp"
           android:padding="5dp"
           android:textSize="15dp"

           />









    </LinearLayout>

</RelativeLayout>