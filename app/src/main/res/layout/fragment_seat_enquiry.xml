<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rail"
    android:paddingTop="40sp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp"

        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
           android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
           >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/enter_train"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:fontFamily="@font/ubuntu_light"
                    android:hint="Train No"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp" />

                <!--<ImageButton-->
                <!--android:id="@+id/search_live_train"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="50dp"-->
                <!--android:background="@color/white"-->
                <!--android:clickable="true"-->
                <!--android:paddingRight="10dp"-->
                <!--android:src="?android:attr/actionModeWebSearchDrawable" />-->
            </LinearLayout>

            <EditText
                android:id="@+id/enter_date"
                android:layout_width="305dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:fontFamily="@font/ubuntu_light"
                android:hint="Date"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/class_code"
                android:layout_width="337dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:weightSum="2">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="Source Code" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="Destination Code" />

            </LinearLayout>

            <Spinner
                android:id="@+id/quota_code"
                android:layout_width="337dp"
                android:layout_height="50dp"
                android:paddingRight="10dp" />

            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:layout_marginLeft="25sp"
                android:layout_marginRight="25sp"
                android:layout_marginTop="20sp"
                android:background="@drawable/signup_buttons_background"
                android:fontFamily="@font/ubuntu_medium"
                android:text="@string/submit"
                android:textColor="@color/fbutton_color_peter_river" />


        </LinearLayout>


    </android.support.v7.widget.CardView>


</ScrollView>