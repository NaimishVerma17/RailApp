<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:paddingBottom="15dp">


    <LinearLayout
        android:id="@+id/linearLayout_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.test.naimish.railapp.Views.BoldTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_horizontal"
            android:text="@string/select_any_one"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <com.test.naimish.railapp.Views.LightTextView
            android:id="@+id/take_a_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:text="@string/camera"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <com.test.naimish.railapp.Views.LightTextView
            android:id="@+id/gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:text="@string/gallery"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>


</RelativeLayout>