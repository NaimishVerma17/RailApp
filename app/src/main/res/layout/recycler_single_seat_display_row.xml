<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:elevation="10dp"
    android:divider="@android:color/transparent"
    app:cardCornerRadius="5dp"
    card_view:cardElevation="10dp"
    card_view:cardPreventCornerOverlap="false"
    android:layout_marginTop="10dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:background="@drawable/ripple"
  app:cardBackgroundColor="@color/colorfbblue"
   android:padding="40dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">


    <com.test.naimish.railapp.Views.LightTextView
        android:id="@+id/train_running_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_forest"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="date"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        android:weightSum="2">
        <com.test.naimish.railapp.Views.LightTextView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_forest"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:layout_marginRight="5dp"
            android:text="Seat Status"
            android:textColor="@color/white"
            android:textSize="20dp" />

    <com.test.naimish.railapp.Views.LightTextView
        android:id="@+id/train_seat_status"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/color_forest"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="Seat info"
        android:textColor="@color/white"
        android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>